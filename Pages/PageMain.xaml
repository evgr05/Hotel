<Page x:Class="Hotel.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnNumbers" Content="Номера" Margin="0 0 0 10"/>
            <Button x:Name="btnGuests" Content="Постояльцы" Margin="0 0 0 10"/>
            <Button x:Name="btnReport" Content="Состояние номерного фонда" Margin="0 0 0 10"/>
            <Button x:Name="btnExit" Content="Выход" Click="btnExit_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
