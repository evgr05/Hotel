<Page x:Class="Hotel.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="270">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="25" Margin="0 0 0 10"/>
            <Grid Margin="0 0 0 10">
                <TextBlock Text="Логин:" HorizontalAlignment="Left"/>
                <TextBox x:Name="txbLogin" Width="220" HorizontalAlignment="Right"/>

            </Grid>
            <Grid Margin="0 0 0 10">
                <TextBlock Text="Пароль:" HorizontalAlignment="Left"/>
                <PasswordBox x:Name="psbPassword" Width="220" HorizontalAlignment="Right"/>
            </Grid>
            <Button Content="Войти" x:Name="btnLogin" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
